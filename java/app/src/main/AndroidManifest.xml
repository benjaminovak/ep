<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="seminarska.ep.seminarska">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".session.MyApplicationObject"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar">
        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ProductListActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />
        <activity
            android:name=".activity.ProductDetailActivity"
            android:label="@string/title_activity_product_details"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />
        <activity
            android:name=".activity.ProfileActivity"
            android:label="@string/title_activity_profile" />
        <activity
            android:name=".activity.CartActivity"
            android:label="@string/title_activity_cart" />
        <activity
            android:name=".activity.ChooseOrdersActivity"
            android:label="@string/title_activity_choose_orders" />
        <activity
            android:name=".activity.OrdersActivity"
            android:label="@string/title_activity_orders" />
        <activity
            android:name=".activity.OrderDetailsActivity"
            android:label="@string/title_activity_order_details"></activity>
    </application>

</manifest>
